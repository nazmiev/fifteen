doctype html
html(lang="ru") 
    head
        meta(charset="utf-8")
        title Пятнашки
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href=baseurl + "/css/reset.css")
        link(rel="stylesheet" href=baseurl + "/css/index.css")
    body
        - var values = new Array(16).fill(0).map((item, index) => index + 1);
        .page
            h1 Игра в «Пятнашки»
            .fifteen#fifteen
                each val in values 
                    button.item(data-matrix-id=val)
                        span.itemVal= val
            button.button#shuffle Перемешать
        script(src=baseurl + "/js/index.js")
