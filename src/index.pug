doctype html
html(lang="ru") 
    head
        meta(charset="utf-8")
        title Пятнашки
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href=baseurl + "/css/reset.css")
        link(rel="stylesheet" href=baseurl + "/css/index.css")
    body
        - var values = new Array(16).fill(0).map((item, index) => index + 1);
        .page
            h1#zagolovok Игра в «Пятнашки»
            .fifteen#fifteen
                each val in values 
                    button.item(data-matrix-id=val)
                        span.itemVal= val
            div
                //- button.button#shuffle Перемешать
                button.button#auto Перемешать
            p#result Ваш результат
            button.shareHide.button#share <a href="https://vk.com/share.php?url=https://nazmiev.github.io/fifteen/" target="_blank">Поделиться результатом</a>
            img#hint(src="https://image.shutterstock.com/image-vector/arrow-button-on-keyboard-icon-260nw-339331691.jpg", alt="Можно управлять стрелками на клавиатуре")
        script(src=baseurl + "/js/index.js")
